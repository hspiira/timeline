{
    "version": 2,
    "buildCommand": "pip install uv && uv sync --frozen",
    "installCommand": "pip install uv && uv sync --frozen",
    "builds": [
      {
        "src": "app/main.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app/main.py"
      }
    ]
  }  